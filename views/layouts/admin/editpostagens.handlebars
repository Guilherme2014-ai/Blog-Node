{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="post">

            <label for="titulo">Titulo:</label>
            <input value="{{postagens.titulo}}" type="text" class="form-control" name="titulo" id="titulo" required><br>

            <label for="slug">Slug:</label>
            <input value="{{postagens.slug}}" type="text" class="form-control" name="slug" id="slug" required><br>

            <label for="descricao">Descrição:</label>
            <input value="{{postagens.descricao}}" type="text" class="form-control" name="descricao" id="descricao" required><br>

            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" class="form-control" id="conteudo" cols="30" rows="3" required>{{postagens.conteudo}}</textarea><br>

            <input type="hidden" value="{{postagens._id}}" id="id" name="id">
            <label for="categorias">Categoria:</label>
            
            <select class="custom-select" name="categorias" id="categorias" required>
                {{#each categorias}}
                <option id="{{_id}}" name="section" value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria</option>
                {{/each}}
            </select><br><br>

            <button type="submit" class="btn btn-success">Editar Postagem</button>
        </form>
    </div>
</div>